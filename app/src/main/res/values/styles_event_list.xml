<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EventListCardStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
    </style>

    <style name="EventListItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearanceListItem</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EventListItem.Secondary">
        <item name="android:textAppearance">@style/TextAppearanceListItemSecondary</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="EventListItem.Date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/ic_time_16dp</item>
        <item name="android:textAppearance">@style/TextAppearanceListItemSecondary</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/bg_round_rect_dark_red</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

</resources>